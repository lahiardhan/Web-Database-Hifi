<%- include('partials/header') %>

<div class="w-full max-w-xs">
  <form class="bg-white rounded px-8 pt-6 pb-8 mb-4" action="/forgot" method="post">
    <div class="mb-4">
      <label class="block text-gray-600 text-sm font-semibold mb-2" for="title">
        Username
      </label>
      <input
        class="bg-gray-100 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        id="title"
        type="text"
        placeholder="Username"
        name="username"
      />
    </div>
    <div class="mb-4">
      <label
        class="block text-gray-600 text-sm font-semibold mb-2"
        for="username"
      >
        Password baru
      </label>
      <input
        class="bg-gray-100 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        id="title"
        type="text"
        placeholder="Password baru"
        name="password"
      />
    </div>
    <div class="flex items-center justify-between">
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
        Ubah password
      </button>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
