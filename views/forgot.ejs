<%- include ./partials/header.ejs %> 

   <div class="flex items-center justify-center h-screen bg-cover bg-no-repeat bg-center" style="background-image: url('https://source.unsplash.com/IXUM4cJynP0')">
      <div class="w-full md:w-1/3 p-8 rounded-3xl shadow-xl bg-white bg-opacity-25 backdrop-filter backdrop-blur-2xl m-5">
         <div class="flex flex-col text-white">
            <div class="flex justify-center mb-3">
               <img src="/img/LogoHIFI-2.png" alt="logo HIFI" width="40" height="20">
               <p class="text-2xl md:text-3xl pl-2">Ubah Password</p>
            </div>
            <%- include ./partials/message.ejs %>
            <form class="flex flex-col mt-3" action="/forgot" method="post">
               <div class="flex flex-col">
                  <label for="username" class="text-lg">Username</label>
                  <input type="text" id="username" placeholder="Username"
                     class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline"
                     name="username">
               </div>
               
               <div class="flex flex-col pt-4">
                  <label for="email" class="text-lg">Email</label>
                  <input type="text" id="email" placeholder="youremail@mail.com"
                     class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline"
                     name="email">
               </div>
      
               <div class="flex flex-col pt-4">
                  <label for="password" class="text-lg">Password</label>
                  <input type="password" id="password" placeholder="Password" 
                     class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline" 
                     name="password">
               </div>
      
               <button type="submit" class="bg-black text-white font-bold text-lg hover:bg-gray-700 p-2 mt-8">Ubah Password</button>
           </form>
         </div>
      </div>
   </div>

<%- include ./partials/footer.ejs %>
