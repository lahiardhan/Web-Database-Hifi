<%- include('partials/header') %>

<div class="w-full flex flex-wrap">

    <!-- Login Section -->
    <div class="w-full md:w-1/2 flex flex-col">

        <div class="flex justify-center md:justify-start pt-12 md:pl-12 md:-mb-24">
            <img src="/img/Logo HIFI - SVG.svg" alt="logo-hifi" style="height: 60px;">
        </div>

        <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
            <p class="text-center text-3xl">Sign Up</p>
            <p class="text-center text-red-500">
                <%= message %>
            </p>
            <form class="flex flex-col pt-3 md:pt-8" action="/auth/signup" method="post">
                <div class="flex flex-col pt-4 justify-between">
                    <label for="username" class="text-lg">
                        Username
                        <span class="md:text-xs text-red-500">
                            <%= unameBlank %>
                        </span>
                    </label>
                    <input 
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                        type="number" 
                        id="username" 
                        name="username" 
                        placeholder="Username"
                        autocomplete="off"
                    >
                </div>
                <div class="flex flex-col pt-4">
                    <label for="email" class="text-lg">
                        Email
                        <span class="md:text-xs text-red-500">
                            <%= emailBlank %>
                        </span>
                    </label>
                    <input 
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                        type="text" 
                        id="email" 
                        name="email" 
                        placeholder="youremail@mail.com"
                        autocomplete="off"
                    >
                </div>
                <div class="flex flex-col pt-4">
                    <label for="password" class="text-lg">
                        Password
                        <span class="md:text-xs text-red-500">
                            <%= passBlank %>
                        </span>
                    </label>
                    <div class="flex flex-row shadow appearance-none border rounded mt-1">
                        <input 
                            class="w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline appearance-none rounded"
                            type="password" 
                            id="password" 
                            name="password"
                            placeholder="Password"
                        >
                        <button id="seePassButton" class="px-3" type="button"><i id="seePassIcon" class="fa-solid fa-eye"></i></button>
                    </div>
                </div>
                <button type="submit" class="bg-black text-white font-bold text-lg hover:bg-gray-700 p-2 mt-8">Sign Up</button>
            </form>
            <div class="text-center pt-12 pb-12">
                <p>Sudah punya akun? <a href="/auth/login" class="underline font-semibold">Login</a></p>
            </div>
        </div>

    </div>

    <!-- Image Section -->
    <div class="w-1/2 shadow-2xl">
        <img class="object-cover w-full h-screen hidden md:block" src="https://source.unsplash.com/IXUM4cJynP0">
    </div>
</div>

<%- include('partials/footer') %>
